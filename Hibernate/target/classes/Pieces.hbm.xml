<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "md.cedacri.pojo.Pieces" table = "pieces">

        <meta attribute = "class-description">
            This class contains the pieces detail.
        </meta>

        <id name = "idPiece" type = "int" column = "ID_PIECE">
            <generator class="native"/>
        </id>

        <property name = "seriePiece" column = "SERIE" type = "int"/>
        <property name = "name" column = "PIECES_NAME" type = "string"/>
        <property name = "characteristic" column = "CHARACTERISTIC" type = "string"/>

    </class>
</hibernate-mapping>