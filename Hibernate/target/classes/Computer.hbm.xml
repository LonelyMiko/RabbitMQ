<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "md.cedacri.pojo.Computer" table = "computer">

        <meta attribute = "class-description">
            This class contains the computer detail.
        </meta>

        <id name = "idComputer" type = "int" column = "ID_COMPUTER">
            <generator class="native"/>
        </id>

        <property name = "serieComputer" column = "SERIE_COMPUTER" type = "int"/>
        <property name = "description" column = "DESCRIPTION" type = "string"/>
        <property name = "assemblyDate" column = "ASSEMBLY_DATE" type = "date"/>

    </class>
</hibernate-mapping>